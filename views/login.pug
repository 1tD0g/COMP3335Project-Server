html
    head
        style.
            .login-form{
                padding: 5%;
                box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
            }
            .login-form h3{
                text-align: center;
                color: #333;
            }
            .login-container form{
                padding: 10%;
            }
            .btnSubmit
            {
                width: 50%;
                border-radius: 1rem;
                padding: 1.5%;
                border: none;
                cursor: pointer;
            }
            .login-form .btnSubmit{
                font-weight: 600;
                color: #fff;
                background-color: #0062cc;
            }
            .login-form .ForgetPwd{
                color: #0062cc;
                font-weight: 600;
                text-decoration: none;
            }
    include navbar
    body
        br
        br
        div(class = "container")
            if message != "" && typeof(message) != "undefined"
                div(class = "alert alert-danger fade show" role="alert") #{message}
                script(type = "text/javascript").
                    (() => setTimeout(()=>$(".alert").alert("close"), 3000))()
            if successMessage != "" && typeof(successMessage) != "undefined"
                div(class = "alert alert-success" role="alert") #{successMessage}
            div(class = "row")
                aside(class ="col-sm")
                div(class="card col-sm")
                    article(class="card-body")
                    h4(class="card-title mb-4 mt-1 text-center") Sign in
                    form(method = "POST" action = "/login" id = "loginForm")
                        div(class = "form-group")
                            label Email:
                            input(name = "email" class = "form-control" placeholder = "Email" type = "email" required)
                        div(class="form-group")
                            label Password: 
                            input(id = "loginPassword" name = "password" class = "form-control" placeholder = "Password" type = "password" minlength = "8" maxlength = "20" required)
                        a(class = "float-right text-dark" href="/forgot") Forgot Password?
                        div(class="form-group")
                            div(class="checkbox")
                                input(type="checkbox" name = "remember" value = "yes")
                                label Remember Me
                        div(class="form-group")
                            button(typ = "submit" class = "btn btn-dark btn-block") Login
                div(class = "col-sm")