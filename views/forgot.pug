html
    include navbar
    body
        br
        br
        div(class = "container")
            if message != "" && typeof(message) != "undefined"
                div(class = "alert alert-danger fade show" role="alert") #{message}
                script(type = "text/javascript").
                    (() => setTimeout(()=>$(".alert").alert("close"), 3000))()
            if successMessage != "" && typeof(successMessage) != "undefined"
                div(class = "alert alert-success" role="alert") #{successMessage}
            div(class = "row")
                aside(class ="col-sm")
                div(class="card col-sm")
                    article(class="card-body")
                    h4(class="card-title mb-4 mt-1 text-center") Forgot Password
                    form(method = "POST" action = "/forgot" id = "forgotForm")
                        div(class = "form-group")
                            label Email:
                            input(name = "email" class = "form-control" placeholder = "Email" type = "email" required)
                        div(class="form-group")
                            button(typ = "submit" class = "btn btn-dark btn-block") Submit
                div(class = "col-sm")